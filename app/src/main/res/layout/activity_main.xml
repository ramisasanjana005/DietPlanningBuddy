<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#000000"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome To DietPlannerBuddy!
            Select Your Option"
            android:textAlignment="center"
            android:textColor="#eef2f2"
            android:textSize="35dp"
            android:textStyle="bold"
            android:paddingTop="15dp"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_marginLeft="125dp"
            android:backgroundTint="#F44336"
            android:text="Sign In/Up
            (For
            Premium Features)"
            android:textAlignment="center"
            android:textColor="#f1f9f8"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#3F51B5"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/button2"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:backgroundTint="#E91E63"
            android:text="BMI
            Water
            Calorie Calculator"
            android:textAlignment="center"
            android:textColor="#f1f9f8"
            android:textSize="15dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"

            android:background="#000000"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <Button
        android:id="@+id/button3"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:background="#000000"
        android:backgroundTint="#9C27B0"
        android:text="Plan My Diet"
        android:textAlignment="center"
        android:textColor="#f1f9f8"
        android:textSize="15dp"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_gravity="center"
        android:layout_marginLeft="125dp"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:background="#000000"
            android:backgroundTint="#3F51B5"
            android:text="Set Water Reminder"
            android:textAlignment="center"
            android:textColor="#f1f9f8"
            android:textSize="15dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/button5"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:background="#000000"
        android:backgroundTint="#673AB7"
        android:text="Search For Healthy Recipes"
        android:textAlignment="center"
        android:textColor="#f1f9f8"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="125dp"
        android:layout_gravity="center"
        android:padding="5dp"
        />



        <Button
            android:id="@+id/button6"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:text="Scan Food Code"
            android:textAlignment="center"
            android:background="#000000"
            android:textColor="#f1f9f8"
            android:textSize="15dp"
            android:backgroundTint="#2196F3"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

</LinearLayout>

